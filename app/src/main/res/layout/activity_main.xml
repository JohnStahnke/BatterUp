<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#32FBFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.batterup.MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                style="@style/TextViewStyleTable"
                android:layout_weight="2"
                />
            <TextView
                android:text="1"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="2"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="3"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="4"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="5"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="6"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="7"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="8"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:text="9"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:layout_weight="2"
                android:text="Total"
                style="@style/TextViewStyleTable"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">
            <TextView
                style="@style/TextViewStyleTable"
                android:layout_weight="2"
                android:text="Visitor"
                />
            <TextView
                android:id="@+id/topOfFirst"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfSecond"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfThird"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfFourth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfFifth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfSixth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfSeventh"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfEigth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/topOfNinth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:layout_weight="2"
                android:id="@+id/visitorTotal"
                style="@style/TextViewStyleTable"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">
            <TextView
                style="@style/TextViewStyleTable"
                android:layout_weight="2"
                android:text="Home"
                android:id="@+id/homeCell"
                />
            <TextView
                android:id="@+id/bottomOfFirst"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfSecond"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfThird"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfFourth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfFifth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfSixth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfSeventh"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfEighth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:id="@+id/bottomOfNinth"
                style="@style/TextViewStyleTable"
                />
            <TextView
                android:layout_weight="2"
                android:id="@+id/homeTotal"
                style="@style/TextViewStyleTable"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextViewStyleLinear"
            android:layout_weight="2"
            android:text="AT BAT"
            android:id="@+id/lblAtBat" />

        <TextView
            android:text="BALL"
            style="@style/TextViewStyleLinear"
            android:id="@+id/lblBall" />

        <TextView
            android:text="STRIKE"
            style="@style/TextViewStyleLinear"
            android:id="@+id/lblStrike" />

        <TextView
            android:text="OUT"
            style="@style/TextViewStyleLinear"
            android:id="@+id/lblOut" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:onClick="clickAtBat"
            style="@style/TextViewStyleStats"
            android:id="@+id/tvAtBat" />

        <TextView
            style="@style/TextViewStyleStats"
            android:id="@+id/tvBall" />

        <TextView
            style="@style/TextViewStyleStats"
            android:id="@+id/tvStrike" />

        <TextView
            style="@style/TextViewStyleStats"
            android:id="@+id/tvOut" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/baseballfield" />
        <!--2nd base-->
        <CheckBox
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            style="@style/BasesStyle"
            android:id="@+id/chkbxSecondBase" />
        <!--3rd base-->
        <CheckBox
            android:layout_marginLeft="45dp"
            android:layout_marginTop="32dp"
            android:layout_alignParentLeft="true"
            style="@style/BasesStyle"
            android:id="@+id/chkbxThirdBase" />
        <!--1st base-->
        <CheckBox
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_marginTop="32dp"
            style="@style/BasesStyle"
            android:id="@+id/chkbxFirstBase" />
        <!--Home-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:text="Home"
            android:onClick="baseClicked"
            android:id="@+id/buttonHome" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Strike"
            android:textSize="11sp"
            android:onClick="clickStrike"
            android:id="@+id/buttonStrike" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="clickBall"
            android:text="Ball"
            android:id="@+id/buttonBall" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="clickFoulBall"
            android:text="Foul Ball"
            android:textSize="10sp"
            android:id="@+id/buttonFoulBall" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="clickHit"
            android:text="Hit"
            android:id="@+id/buttonHit" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="clickOut"
            android:text="Out"
            android:id="@+id/buttonOut" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="clickReset"
            android:textSize="10sp"
            android:text="Reset"
            android:id="@+id/buttonReset" />

    </LinearLayout>
</LinearLayout>
